            android:name="com.ysy.classpower_teacher.activities.test.TestPreviewActivity"
            android:label="@string/title_activity_test"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ysy.classpower_common.activities.TestDetailsActivity"
            android:label="@string/title_activity_test_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ysy.classpower_student.activities.base.StudentWelcomeActivity"
            android:label="@string/title_activity_student_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ysy.classpower_teacher.activities.home.AddNotificationsActivity"
            android:label="@string/title_activity_add_notifications"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ysy.classpower_teacher.activities.test.SelectSubjectsActivity"
            android:label="@string/title_activity_select_subjects"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ysy.classpower_teacher.activities.test.SendTestActivity"
            android:label="@string/title_activity_send_test"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ysy.classpower_teacher.activities.home.TeacherWelcomeActivity"
            android:label="@string/title_activity_student_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ysy.classpower_teacher.activities.base.TeacherRegisterActivity"
            android:label="@string/title_register"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ysy.classpower_student.activities.base.StudentRegisterActivity"
            android:label="@string/title_register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ysy.classpower_student.activities.base.StudentMessageActivity"
            android:label="@string/title_activity_message_center"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
