<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ysy.classpower_student.activities.test.TestPreviewActivity">

    <TextView
        android:id="@+id/teacher_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="开始时间"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/teacher_title_text_view"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/teacher_office_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_title_text_view"
        android:layout_alignStart="@+id/teacher_title_text_view"
        android:layout_below="@+id/View1"
        android:text="截止时间"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/teacher_office_text_view"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_office_text_view"
        android:layout_alignStart="@+id/teacher_office_text_view"
        android:layout_below="@+id/View2"
        android:text="状态"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView5"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/View3"
        android:text="限时"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView38"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View4"
        android:layout_centerHorizontal="true"
        android:text="    "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:layout_below="@+id/textView7"
        android:text="题目数量 "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView8"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/View5"
        android:text="附加信息"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/begin_time_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/View1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/end_time_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/begin_time_content_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/test_state_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/end_time_content_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/limit_time_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/test_state_content_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/test_count_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView7"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/additional_info_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/View6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/test_details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_test_button"
        android:layout_alignEnd="@+id/additional_info_content_text_view"
        android:layout_alignRight="@+id/additional_info_content_text_view"
        android:text="测试详情"
        android:visibility="gone" />

    <Button
        android:id="@+id/change_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/end_test_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="修改测试"
        android:visibility="gone" />

    <Button
        android:id="@+id/end_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/additional_info_content_text_view"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/additional_info_content_text_view"
        android:text="结束测验"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />
</RelativeLayout>
