<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ysy.classpower_student.activities.base.StudentRegisterActivity">

    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/handle_register_button">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/handle_register_button"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="用户名  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/user_id_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView38"
                    android:layout_toRightOf="@+id/textView38" />

                <TextView
                    android:id="@+id/teacher_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/user_id_edit_text"
                    android:text="密    码  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/user_id_edit_text"
                    android:layout_alignRight="@+id/user_id_edit_text"
                    android:layout_below="@+id/user_id_edit_text"
                    android:layout_toRightOf="@+id/teacher_number_text_view"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/password_edit_text"
                    android:text="姓    名  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/password_edit_text"
                    android:layout_alignRight="@+id/password_edit_text"
                    android:layout_below="@+id/password_edit_text"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3" />

                <TextView
                    android:id="@+id/email_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/name_edit_text"
                    android:text="邮    箱  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/name_edit_text"
                    android:layout_alignLeft="@+id/user_id_edit_text"
                    android:layout_alignRight="@+id/name_edit_text"
                    android:layout_alignStart="@+id/user_id_edit_text"
                    android:layout_below="@+id/name_edit_text"
                    android:inputType="textEmailAddress" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/name_edit_text"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/name_edit_text"
                    android:layout_below="@+id/tel_editText">

                    <RadioButton
                        android:id="@+id/male_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView18"
                        android:layout_toStartOf="@+id/textView18"
                        android:checked="true"
                        android:text="男" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="        "
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioButton
                        android:id="@+id/female_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView18"
                        android:layout_toRightOf="@+id/textView18"
                        android:checked="false"
                        android:text="女" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tel_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/email_edit_text"
                    android:text="电    话  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView38"
                    android:layout_alignRight="@+id/textView38"
                    android:layout_below="@+id/tel_editText"
                    android:text="性    别  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/tel_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/email_edit_text"
                    android:layout_alignLeft="@+id/relativeLayout"
                    android:layout_alignRight="@+id/email_edit_text"
                    android:layout_alignStart="@+id/relativeLayout"
                    android:layout_below="@+id/email_edit_text" />

                <View
                    android:id="@+id/View_sex"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/relativeLayout"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/schools_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView34"
                    android:text="学    院  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/View_sex"
                    android:layout_centerHorizontal="true"
                    android:text="院校信息"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/classes_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班    级  "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_below="@+id/View_spinner_2" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/schools_spinner"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:layout_below="@+id/textView34"
                    android:layout_alignRight="@+id/email_edit_text"
                    android:layout_alignEnd="@+id/email_edit_text"
                    android:layout_alignLeft="@+id/relativeLayout"
                    android:layout_alignStart="@+id/relativeLayout"
                    android:layout_alignBottom="@+id/schools_textView" />

                <View
                    android:id="@+id/View_spinner_1"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_below="@+id/schools_textView"
                    android:background="@android:color/white" />

                <View
                    android:id="@+id/View_spinner_2"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/majors_textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/classes_spinner"
                    android:layout_alignTop="@+id/classes_textView"
                    android:layout_alignBottom="@+id/classes_textView"
                    android:layout_alignLeft="@+id/schools_spinner"
                    android:layout_alignStart="@+id/schools_spinner" />

                <TextView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="专    业  "
                    android:id="@+id/majors_textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View_spinner_1" />

                <Spinner
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/majors_spinner"
                    android:layout_alignTop="@+id/majors_textView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/View_spinner_2"
                    android:layout_alignLeft="@+id/schools_spinner"
                    android:layout_alignStart="@+id/schools_spinner" />

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/handle_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="提交注册" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_success_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_sentiment_very_satisfied_black_48dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Success"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true"
            android:text="注册成功"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/textView28"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/View1"
            android:layout_centerHorizontal="true"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:layout_below="@+id/textView29"
            android:text="用户名"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_id_text_view"
            android:layout_centerHorizontal="true"
            android:text="姓    名"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView32"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_view"
            android:layout_centerHorizontal="true"
            android:text="班    级"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/class_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView33"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_text_view"
            android:layout_centerHorizontal="true"
            android:text="性    别"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/sex_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView35"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sex_text_view"
            android:layout_centerHorizontal="true"
            android:text="身    份"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/role_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView37"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/back_to_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="返回登录" />

    </RelativeLayout>

</RelativeLayout>
