<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ysy.classpower_student.activities.base.StudentWelcomeActivity">

    <RelativeLayout
        android:id="@+id/student_welcome_center_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/item_done_press"
                android:text="修改信息"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/item_will_press"
                android:text="注    销"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:id="@+id/student_avatar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <com.ysy.classpower_utils.CircularImageView
                        android:id="@+id/student_avatar_imageView"
                        android:layout_width="64dp"
                        android:src="@drawable/ic_account_circle_black_48dp"
                        android:layout_height="64dp"
                        app:civ_border="true"
                        app:civ_borderWidth="2dp"
                        app:civ_borderColor="@color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/student_avatar_imageView"
                        android:layout_toStartOf="@+id/student_avatar_imageView"
                        android:text="点击设置头像"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </RelativeLayout>

                <View
                    android:id="@+id/View_Avatar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/student_avatar_layout"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View_Avatar"
                    android:text="姓名"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_name_content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/View1"
                    android:layout_alignEnd="@+id/View_Avatar"
                    android:layout_alignRight="@+id/View_Avatar"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/student_name_text_view"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View1"
                    android:text="学号"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_number_content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/View1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/student_number_text_view"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_sex_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View2"
                    android:text="性别"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_sex_content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/View2"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/student_sex_text_view"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_class_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View3"
                    android:text="班级"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_class_content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/View3"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/student_class_text_view"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/View7"
                    android:layout_centerHorizontal="true"
                    android:text="        "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_lesson_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:text="当前课堂"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_lesson_content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/View7"
                    android:layout_alignRight="@+id/View7"
                    android:layout_alignTop="@+id/student_lesson_text_view"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_lesson_text_view"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_tel_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_class_text_view"
                    android:text="电话"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_tel_content_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/View4"
                    android:layout_alignRight="@+id/View4"
                    android:layout_alignTop="@+id/View4"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/student_tel_textView"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/student_email_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View6"
                    android:text="邮箱"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_email_content_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/View6"
                    android:layout_alignRight="@+id/View6"
                    android:layout_below="@+id/View6"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:id="@+id/View7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_email_textView"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/student_up_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <com.ysy.classpower_utils.CircularImageView
            android:id="@+id/student_up_avatar_imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:civ_border="true"
            app:civ_borderWidth="8dp"
            app:civ_borderColor="@color/transparent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_account_circle_black_48dp" />

        <Button
            android:id="@+id/choose_pic_as_avatar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/student_up_avatar_imageView"
            android:layout_alignLeft="@+id/student_up_avatar_imageView"
            android:layout_alignRight="@+id/student_up_avatar_imageView"
            android:layout_alignStart="@+id/student_up_avatar_imageView"
            android:layout_below="@+id/textView4"
            android:text="本地选择头像" />

        <Button
            android:id="@+id/confirm_up_avatar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="确认上传" />

        <Button
            android:id="@+id/give_up_avatar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:text="返    回" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_up_avatar_imageView"
            android:layout_centerHorizontal="true"
            android:text="请选择静态图片作为你的头像"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose_pic_as_avatar_btn"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/take_photo_as_avatar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/choose_pic_as_avatar_btn"
            android:layout_alignLeft="@+id/choose_pic_as_avatar_btn"
            android:layout_alignRight="@+id/choose_pic_as_avatar_btn"
            android:layout_alignStart="@+id/choose_pic_as_avatar_btn"
            android:layout_alignTop="@+id/textView2"
            android:text="拍照作为头像" />

    </RelativeLayout>

</RelativeLayout>
