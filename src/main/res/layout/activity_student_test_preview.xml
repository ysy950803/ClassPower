<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ysy.classpower_student.activities.test.TestPreviewActivity">

    <Button
        android:id="@+id/test_begin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始测试"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/teacher_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/teacher_title_text_view"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/teacher_office_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_title_text_view"
        android:layout_alignStart="@+id/teacher_title_text_view"
        android:layout_below="@+id/View1"
        android:text="截止时间"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/teacher_office_text_view"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_office_text_view"
        android:layout_alignStart="@+id/teacher_office_text_view"
        android:layout_below="@+id/View2"
        android:text="状态"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView5"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/View3"
        android:text="限时"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/View4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView38"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View4"
        android:layout_centerHorizontal="true"
        android:text="    "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题目数量"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView38"
        android:layout_alignStart="@+id/textView38" />

    <View
        android:id="@+id/View5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView8"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/accuracy_rate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正确率"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/View5"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <View
        android:id="@+id/View6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/accuracy_rate_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/accuracy_rate_text_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="附加信息"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/accuracy_rate_text_view"
        android:layout_alignStart="@+id/accuracy_rate_text_view" />

    <View
        android:id="@+id/View7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/test_state_content_text_view"
        android:layout_above="@+id/textView38"
        android:layout_alignRight="@+id/View2"
        android:layout_alignEnd="@+id/View2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/begin_time_content_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/end_time_content_text_view"
        android:layout_alignTop="@+id/View1"
        android:layout_alignRight="@+id/View1"
        android:layout_alignEnd="@+id/View1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/limit_time_content_text_view"
        android:layout_alignBottom="@+id/View4"
        android:layout_alignRight="@+id/View3"
        android:layout_alignEnd="@+id/View3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/test_count_content_text_view"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/View5"
        android:layout_alignEnd="@+id/View5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/accuracy_rate_content_text_view"
        android:layout_alignBottom="@+id/View6"
        android:layout_alignRight="@+id/View6"
        android:layout_alignEnd="@+id/View6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/additional_info_content_text_view"
        android:layout_above="@+id/View7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="答案解析"
        android:visibility="gone"
        android:id="@+id/check_answer_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/additional_info_content_text_view"
        android:layout_alignEnd="@+id/additional_info_content_text_view" />

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="测试详情"-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/end_test_button"-->
        <!--android:layout_above="@+id/check_answer_button"-->
        <!--android:layout_centerHorizontal="true" />-->

</RelativeLayout>