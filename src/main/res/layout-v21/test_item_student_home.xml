<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_home_tests_list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_raise"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.rey.material.widget.TextView
            android:id="@+id/student_home_tests_begins_on_textView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/student_home_tests_title_textView"
            android:gravity="center"
            android:text="2016-02-15 16:45:56" />

        <TextView
            android:id="@+id/student_home_tests_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试1" />

        <com.rey.material.widget.TextView
            android:background="@color/light_gray"
            android:id="@+id/student_home_tests_expires_on_textView"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_below="@+id/student_home_tests_begins_on_textView"
            android:gravity="end"
            android:text="2016-02-15 16:45:56" />

    </RelativeLayout>

</android.support.v7.widget.CardView>