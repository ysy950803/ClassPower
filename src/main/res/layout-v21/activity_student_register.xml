<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ysy.classpower_student.activities.base.StudentRegisterActivity">

    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/handle_register_button">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/handle_register_button"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/student_register_userId_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="用户名  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:transitionName="student_login_register_transition"
                    android:id="@+id/student_register_userId_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/student_register_userId_textView"
                    android:layout_toRightOf="@+id/student_register_userId_textView"
                    android:hint="请填入学号作为用户名" />

                <TextView
                    android:id="@+id/student_register_password_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_userId_editText"
                    android:text="密    码  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/student_register_password_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/student_register_userId_editText"
                    android:layout_alignRight="@+id/student_register_userId_editText"
                    android:layout_below="@+id/student_register_userId_editText"
                    android:layout_toEndOf="@+id/student_register_userId_textView"
                    android:layout_toRightOf="@+id/student_register_userId_textView"
                    android:ems="10"
                    android:hint="密码不少于6位"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/student_register_double_password_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_password_editText"
                    android:text="确    认"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/student_register_double_password_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/student_register_password_editText"
                    android:layout_alignLeft="@+id/student_register_password_editText"
                    android:layout_alignRight="@+id/student_register_password_editText"
                    android:layout_alignStart="@+id/student_register_password_editText"
                    android:layout_below="@+id/student_register_password_editText"
                    android:ems="10"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/student_register_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_double_password_editText"
                    android:text="姓    名"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/student_register_name_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/student_register_double_password_editText"
                    android:layout_alignLeft="@+id/student_register_userId_editText"
                    android:layout_alignRight="@+id/student_register_double_password_editText"
                    android:layout_alignStart="@+id/student_register_userId_editText"
                    android:layout_below="@+id/student_register_double_password_editText"
                    android:hint="必填" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView136"
                    android:layout_toRightOf="@+id/student_register_email_textView">

                    <RadioButton
                        android:id="@+id/male_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView18"
                        android:layout_toStartOf="@+id/textView18"
                        android:checked="true"
                        android:text="男" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="        "
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioButton
                        android:id="@+id/female_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView18"
                        android:layout_toRightOf="@+id/textView18"
                        android:checked="false"
                        android:text="女" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/student_register_email_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_name_editText"
                    android:text="邮    箱"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/student_register_tel_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_email_editText"
                    android:text="电    话"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/student_register_email_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/student_register_name_editText"
                    android:layout_alignRight="@+id/student_register_name_editText"
                    android:layout_below="@+id/student_register_name_editText"
                    android:layout_toEndOf="@+id/student_register_userId_textView"
                    android:layout_toRightOf="@+id/student_register_userId_textView"
                    android:hint="选填"
                    android:inputType="textEmailAddress" />

                <View
                    android:id="@+id/View_sex"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayout"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/schools_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView34"
                    android:text="学    院  "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/View_sex"
                    android:layout_centerHorizontal="true"
                    android:text="院校信息"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/classes_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/View_spinner_2"
                    android:text="班    级  "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="invisible" />

                <Spinner
                    android:id="@+id/schools_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/schools_textView"
                    android:layout_alignEnd="@+id/student_register_name_editText"
                    android:layout_alignLeft="@+id/relativeLayout"
                    android:layout_alignRight="@+id/student_register_name_editText"
                    android:layout_alignStart="@+id/relativeLayout"
                    android:layout_below="@+id/textView34"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

                <View
                    android:id="@+id/View_spinner_1"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_below="@+id/schools_textView"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/View_spinner_2"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/majors_textView"
                    android:background="@android:color/transparent" />

                <Spinner
                    android:id="@+id/classes_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/classes_textView"
                    android:layout_alignLeft="@+id/schools_spinner"
                    android:layout_alignStart="@+id/schools_spinner"
                    android:layout_alignTop="@+id/classes_textView"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/majors_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/View_spinner_1"
                    android:text="专    业  "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:visibility="invisible" />

                <Spinner
                    android:id="@+id/majors_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/View_spinner_2"
                    android:layout_alignLeft="@+id/schools_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/schools_spinner"
                    android:layout_alignTop="@+id/majors_textView"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView136"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/student_register_tel_editText"
                    android:text="性    别"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/student_register_tel_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/student_register_email_editText"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/student_register_email_editText"
                    android:layout_below="@+id/student_register_email_editText"
                    android:hint="选填" />

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/handle_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="提交注册" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_success_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_sentiment_very_satisfied_black_48dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Success"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true"
            android:text="注册成功"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/textView28"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/View1"
            android:layout_centerHorizontal="true"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:layout_below="@+id/textView29"
            android:text="用户名"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_id_text_view"
            android:layout_centerHorizontal="true"
            android:text="姓    名"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView32"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_view"
            android:layout_centerHorizontal="true"
            android:text="班    级"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/class_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView33"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_text_view"
            android:layout_centerHorizontal="true"
            android:text="性    别"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/sex_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView35"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sex_text_view"
            android:layout_centerHorizontal="true"
            android:text="身    份"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/role_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView37"
            android:layout_centerHorizontal="true"
            android:text="    "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/back_to_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="返回登录" />

    </RelativeLayout>

</RelativeLayout>
